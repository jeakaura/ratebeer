<h1>Clubs</h1>

<div class="dropdown">
  <button class="btn btn-outline-secondary dropdown-toggle btn-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Order
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "Name", beer_clubs_path(order: "name"), class:"dropdown-item"%></li>
    <li><%= link_to "Founded", beer_clubs_path(order: "founded"), class:"dropdown-item"%></li>
    <li><%= link_to "City", beer_clubs_path(order: "city"), class:"dropdown-item"%></li>
  </ul>
</div>

<p>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @beer_clubs.each do |club| %>
      <div class="col">
        <div class="card h-100 text-bg-light">
          <div class="card-body">
            <h5 class="card-title"><%= club.name %></h5>
            <small>Founded <%= club.founded %></small>
            <p class="card-text"><%= club.city %>
            <br/><br/><%= link_to "Club page", club, class:"btn btn-outline-secondary btn-sm" %>
            </p>
          </div>
            <div class="card-footer">
              <small class="text-muted">Members: <%= club.memberships.count %></small>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</p>

<%= link_to "New Club", new_beer_club_path, class:'btn btn-outline-primary' if current_user %>
