<div class="otsikko">
  <h1>Breweries</h1>
  <p>Number of breweries: <%= @breweries.count %></p>
  <%= link_to "Add new brewery", new_brewery_path %>
</div>

<div class="sisalto">
  <p style="color: green"><%= notice %></p>

  <div id="breweries">
    <% @breweries.each do |brewery| %>
      <div id="<%= dom_id brewery %>">
        <p>
          <%= link_to brewery.name, brewery %>
        </p>
      
        <p>
          <strong>Year:</strong>
          <%= brewery.year %>
        </p>

        <br/>
      
      </div>
    <% end %>
  </div>
</div>