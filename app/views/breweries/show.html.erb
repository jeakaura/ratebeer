<%= render @brewery %>

<% unless current_user.nil? %>
<%= link_to "Change activity", toggle_path(@brewery.id), class: "btn btn-outline-primary" %>
<% end %>

<%= edit_and_destroy_buttons(@brewery) %>

<% unless current_user.nil? %>
<% if current_user.admin == true %>
    <%= link_to "Destroy", delete_brew_path(@brewery.id), class: "btn btn-outline-danger" %>
<% end %>
<% end %>
